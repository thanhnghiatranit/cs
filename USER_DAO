//		 // show data
//		 while (rs.next()) {
//		 System.out.println(rs.getInt(1) + "  " + rs.getString(2)
//		 + "  " + rs.getString(3));
//		 }
//		 // close connection
//		 conn.close();
//		 } catch (Exception ex) {
//		 ex.printStackTrace();
//		 }
	}
}
